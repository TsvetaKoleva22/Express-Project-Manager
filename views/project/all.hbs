<h1>Projects</h1>
<form class="search" action="/project/search" method="POST">
    <label>Seach: </label>
    <input type="text" name="searchedProject">
    <input type="submit" value="Search">
</form>
<div class="projects">
    {{#each projectsArr}}
    <div class="project">
        <h2>{{name}}</h2>

        {{#if team.name}}
        <h3>Team: {{team.name}}</h3>
        {{else}}
        <h3>Team: No Team assigned</h3>
        {{/if}}
        
        <p>Description: {{description}}</p>
    </div>
    {{/each}}
</div>